pipeline {
    agent any

    stages {
        stage('STAGE1') {
            steps {
               sh '''
               ls
               '''
            }
        }

        stage('Parallel Testing') {

            parallel {
                stage('TEST1') {
                    steps {
                        sh 'sleep 5'
                    }
                }

                stage('TEST2') {
                    steps {
                    sh 'env'
                    }
                }
            }
        }

         stage('STAGE4') {
            steps {
               sh 'sleep 4'
            }
        }
    }
}